<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="error-messages">
    <% if flash[:error].present? %>
      <%= flash[:error] %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
